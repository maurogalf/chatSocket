<nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid justify-content-between">
        <div>
            <h2 class="text-white">User: <span id="user">{{user}}</span></h2>
        </div>
        <div>
            <a class="btn btn-outline-success me-2" href="/productos">Products</a>
            <a class="btn btn-outline-success me-2 disabled" href="/cart">Cart </a>
            <a class="btn btn-outline-success me-2" href="/profile">Profile</a>
            <a class="btn btn-outline-danger me-2" href="/logout">LogOut </a>
        </div>
    </div>
</nav>
{{#if showFinish}}
<div class="container mb-5">
    <nav class=" container navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <h2 class="m-5 text-white">Cart detail: </h2>
        </div>
    </nav>
</div>
<table class="table table-dark table-striped mt-5">
    <thead>
        <tr>
            <th scope="col">ID Producto</th>
            <th scope="col">Nombre del Curso</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Precio</th>
            <th scope="col">Logo</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody id="form">
        {{#each userCart}}
        <tr>
            <th scope="row">{{this.code}}</th>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.cant}}
            </td>
            <td>$ {{this.price}}
            </td>
            <td>
                <img style="max-width: 50px;" src={{this.thumbnail}}>
            </td>
            <td>
                <form action="cart/delete/{{this.code}}" method="POST">
                    <button name="_DELETE" type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<form action="/checkout" class="d-flex my-5 py-3 border-top border-white justify-content-end" method="POST">
    <button name="FINISH" type="submit" class="btn btn-success">Checkout</button>
</form>
{{else}}
<h2 class="m-5 text-white">The cart is empty!</h2>
{{/if}}