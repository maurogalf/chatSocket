<div class="container mb-5">
    <nav class=" container navbar navbar-dark bg-dark">
        <div class="container-fluid col-md-9">
            <h1 class="m-5 text-white">Register</h1>
            <div>
                <span class="text-white">Already registered? </span><a href="/login">Login</a>
            </div>
        </div>
    </nav>
</div>
{{#if error}}
<h3 class="text-white text-center">Error: Invalid e-mail.</h3>
{{/if}}
<div class="container">
    <div class="row">
        <div class="col-md-9 m-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/register" method="POST" enctype="multipart/form-data"
                        class="d-flex row justify-content-center">
                        <div class="input-group m-3">
                            <label class="form-label" for="email">E-mail: </label>
                            <input onChange="formChange()" type="email" class="form-control mx-3" id="username"
                                name="username">
                            <label class="form-label" for="name">Name: </label>
                            <input onChange="formChange()" type="text" class="form-control mx-3" id="name" name="name">
                        </div>
                        <div class="input-group m-3">
                            <label for="address">Address: </label>
                            <input onChange="formChange()" type="text" class="form-control mx-3" id="address"
                                name="address">
                            <label for="age">Age: </label>
                            <input onChange="formChange()" type="number" class="form-control mx-3" id="age" name="age">
                        </div>
                        <div class="input-group m-3">
                            <label for="phone">Phone-number: </label>
                            <select name="area" class="form-select" aria-label="Default select example">
                                <option value="+54"> Argentina (+54)</option>
                                {{#each countryCodes }}
                                <option value="{{this.dial_code}}"> {{this.name}} ({{this.dial_code}})</option>
                                {{/each }}
                            </select>
                            <input onChange="formChange()" type="tel" class="form-control mx-3" id="phone" name="phone">
                            <label for="avatar">Avatar: </label>
                            <input onChange="formChange()" type="file" class="form-control mx-3" id="avatar"
                                name="avatar">
                        </div>
                        <div class="input-group m-3">
                            <label for="password">Password : </label>
                            <input oninput="formChange()" type="password" class="form-control mx-3" id="password"
                                name="password">
                            <label for="confirm-pw">Confirm Password : </label>
                            <input oninput="formChange()" type="password" class="form-control mx-3" id="confirm-pw"
                                name="confirm-pw">
                        </div>
                        <div class="d-flex row justify-content-center">
                            <button type="submit" disabled="true" id="btnSend"
                                class="mt-3 btn btn-primary btn-lg">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>